<div class="contextual">
<%= link_to l(:button_delete), @global_issue_template, :data => {:confirm => l(:text_are_you_sure)}, :method => :delete, :class => 'icon icon-del' %>
<%= link_to l(:label_list_templates), global_issue_templates_path, :class => 'template' %>
</div>

<h2><%= l(:global_issue_templates) %>: #<%= @global_issue_template.id %> <%= @global_issue_template.title %> <%= avatar(@global_issue_template.author, :size => "24") %></h2>

<div class="box">
  <%= error_messages_for 'global_issue_template' %>
<%= labelled_form_for @global_issue_template,
       :html => { :id => 'global_issue_template-form' } do |f| %> 
<%= render :partial => 'form', :locals => { :f => f } %>
<% end %>
</div>
